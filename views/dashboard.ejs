    <!--Add new envelop form dialog-->
    <div id="complete-dialog" class="modal fade" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Add New Envelope</h4>
            <small>Envelopes are stuffs you spend money on. Example: Groceries, Entertainment, Transportation, etc </small>
          </div>
          <div class="modal-body">
            <form class="form-horizontal" id="envelope-form">
              <fieldset>
                <div class="form-group">
                  <label for="envelope-name" class="col-md-2 control-label">Envelope Name</label>
                  <div class="col-md-10">
                    <input type="text" class="form-control" id="envelope-name" placeholder="Envelope Name" required>
                  </div>
                </div>
                <div class="form-group">
                  <label for="envelope-amt" class="col-md-2 control-label">Budget Amount</label>
                  <div class="col-md-10">
                    <input type="number" class="form-control" id="envelope-amt" placeholder="How much would you budget for this envelope in a month?" required>
                  </div>
                </div>
                <div class="form-group">
                  <label for="envelope-pr" class="col-md-2 control-label">Envelope Priority</label>
                  <div class="col-md-10">
                    <input type="number" class="form-control" id="envelope-pr" min="1" max="10" placeholder="How important is this envelope in relation to others? 1 - 10." required>
                  </div>
                </div>
              </fieldset>
              <div class="modal-footer">
                <button type="submit" class="btn btn-raised btn-primary">Submit</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Dismiss</button>
              </div>
            </form>
          </div>
        
        </div>
      </div>
