    <!--start right container-->
    <div class="col-md-8 pad">
      <div class="alert alert-dismissible alert-success" id="success-alert">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <strong>Well done!</strong> You have successfully added an envelope.
      </div>
      <div class="alert alert-dismissible alert-danger" id="danger-alert">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <strong>Oh snap! </strong>Change a few things up and try submitting again.
      </div>
       <div class="alert alert-dismissible alert-success" id="success-alert2">
