<% include ./partials/header %>

<div class="container-fluid auth-page">
  <h2 class="text-center form-header"> Sign In </h2>
  <div class="form-div">
    <form id="login-form">
      <div class="form-group">
        <label for="email2">Email Address</label>
        <input type="email" name="email2" class="form-control" id="email2" placeholder="Your email" required>
        <span id="email_help2" class="help-block"></span>
      </div>
      <div class="form-group">
        <label for="password2">Password</label>
        <input type="password" name="password2" class="form-control" id="password2" placeholder="Your password" required>
        <span id="password_help2" class="help-block"></span>
      </div>
      <button type="submit" class="btn-submit"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span> Sign in with Email </button>
    </form>
    <hr class="hr-red">
  </div>
  <div id="firebaseui-auth-container"></div>
</div>

<% include ./partials/footer %>